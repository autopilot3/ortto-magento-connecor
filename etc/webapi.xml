<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/ortto/coupon/create" method="POST">
        <service class="Ortto\Connector\Api\CouponRepositoryInterface" method="create"/>
        <resources>
            <resource ref="Ortto_Connector::coupons_create"/>
        </resources>
    </route>
    <route url="/V1/ortto/config/update" method="PUT">
        <service class="Ortto\Connector\Api\AppConfigRepositoryInterface" method="update"/>
        <resources>
            <resource ref="Ortto_Connector::update_app_config"/>
        </resources>
    </route>
</routes>
